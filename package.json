{
  "name": "be-love-news",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^8.4.0",
    "npm": "^5.4.0"
  },
  "scripts": {
    "start": "gulp serve",
    "start:debug": "cross-env DEBUG=app:* npm start",
    "build": "npm run lint && gulp",
    "lint": "esw --color",
    "lint:watch": "npm run lint -- -w",
    "precommit": "npm run lint && npm run test:check-coverage",
    "test": "cross-env NODE_ENV=test mocha --ui bdd --timeout 360000 --reporter spec --colors --compilers js:babel-core/register tests --recursive",
    "test:watch": "npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test istanbul cover _mocha -- --ui bdd --timeout 360000 --reporter spec --colors --compilers js:babel-core/register tests --recursive",
    "test:check-coverage": "npm run test:coverage && istanbul check-coverage",
    "apidoc": "apidoc -i src -o docs",
    "pesky": "sh scripts/mac2unix.sh",
    "migration:reset": "node database.reset.js"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "joi": "^10.0.6",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.1",
    "debug": "~2.6.9",
    "dotenv": "^4.0.0",
    "express": "~4.15.5",
    "express-jwt": "^5.1.0",
    "express-jwt-authz": "^1.0.0",
    "express-validation": "^1.0.1",
    "express-winston": "^2.1.2",
    "multer": "*",
    "gulp": "^3.9.0",
    "helmet": "^3.1.0",
    "http-status": "^1.0.1",
    "jade": "~1.11.0",
    "method-override": "^2.3.5",
    "morgan": "^1.7.0",
    "serve-favicon": "~2.4.5",
    "winston": "^2.3.0",
    "request-promise": "^4.2.2",
    "https": "^1.0.0",
    "mongodb": "*",
    "mongoose": "4.10.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/dotenv": "^4.0.1",
    "@types/http-status": "^0.2.0",
    "@types/method-override": "^0.0.30",
    "@types/joi": "^10.4.0",
    "@types/morgan": "^1.7.0",
    "babel": "^5.5.6",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.26.0",
    "gulp-babel": "^7.0.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-newer": "^1.1.0",
    "gulp-nodemon": "^2.0.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-util": "^3.0.0",
    "run-sequence": "^2.1.0"
  }
}
